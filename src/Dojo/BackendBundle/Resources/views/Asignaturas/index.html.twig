{% extends "DojoLoginBundle::layout.html.twig" %}

{% block body -%}
    <h1>Listado de Asignaturas</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('asignaturas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('asignaturas_show', { 'id': entity.id }) }}"><i class="fa fa-fw fa-pencil-square-o"></i></a>
                        <a href="{{ path('asignaturas_delete', { 'id': entity.id }) }}"><i class="fa fa-fw fa-trash-o"></i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block itemsmenulateral %}
<li>
    <a href="{{ path('asignaturas_new') }}"><i class="fa fa-fw fa-plus-square "></i> Crear nueva</a>
</li>
{% endblock %}