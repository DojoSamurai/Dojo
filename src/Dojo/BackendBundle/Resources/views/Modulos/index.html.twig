                        <li>
                            <a href="{{ path('modulos_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>  
  </div>            
</div>               
<div class="btn-group btn-group-lg">
         
    <a href="{{ path('modulos_new') }}">
        Crear un nuevo Modulo
    </a>
</div>
{% endblock %}
