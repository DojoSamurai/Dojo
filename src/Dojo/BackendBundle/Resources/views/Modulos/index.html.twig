{% extends "DojoLoginBundle::layout.html.twig" %}
     
{% block body %}
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Listado de MÃ³dulos</h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
